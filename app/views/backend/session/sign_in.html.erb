<p>サインイン</p>
<%= form_tag('/backend/sign_in', class: "pure-form") do %>
  <div class="pure-u-1 pure-u-lg-5-6">
    <%= text_field_tag :email, nil, :class => 'form-control', placeholder: "メールアドレス" %>
  </div>
  <div class="pure-u-1 pure-u-lg-5-6">
    <%= password_field_tag :password, nil, :class => "form-control", placeholder: "パスワード" %>
  </div>
  <%= submit_tag 'ログイン', class: "pure-button pure-button-primary" %>
<% end %>